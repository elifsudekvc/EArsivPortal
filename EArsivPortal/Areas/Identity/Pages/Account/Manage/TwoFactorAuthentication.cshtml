@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "İki Faktörlü Kimlik Doğrulama (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}


<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
@{
    var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
    @if (consentFeature?.CanTrack ?? true)
    {
        @if (Model.Is2faEnabled)
        {
            if (Model.RecoveryCodesLeft == 0)
            {
                <div class="alert alert-danger">
                    <strong>You have no recovery codes left.</strong>
                    <p>You must <a asp-page="./GenerateRecoveryCodes">yeni bir kurtarma kodu seti oluşturmak</a>  kurtarma kodu ile giriş yapmadan önce.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="alert alert-danger">
                    <strong>You have 1 recovery code left.</strong>
                    <p>You can <a asp-page="./GenerateRecoveryCodes">yeni bir kurtarma kodu seti oluşturmak</a>.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="alert alert-warning">
                    <strong>You have @Model.RecoveryCodesLeft recovery codes left.</strong>
                    <p>You should <a asp-page="./GenerateRecoveryCodes">yeni bir kurtarma kodu seti oluşturmak</a>.</p>
                </div>
            }

            if (Model.IsMachineRemembered)
            {
                <form method="post" style="display: inline-block">
                    <button type="submit" class="btn btn-primary">Bu tarayıcıyı unutun</button>
                </form>
            }
            <a asp-page="./Disable2fa" class="btn btn-primary">Disable 2FA</a>
            <a asp-page="./GenerateRecoveryCodes" class="btn btn-primary">Kurtarma kodlarını sıfırlama</a>
        }

        @if (!Model.HasAuthenticator)
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">Kimlik Doğrulayıcı ekleme</a>
        }
        else
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn yesil">Kimlik doğrulayıcı uygulamasını ayarlama</a>
            <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn yesil">Kimlik doğrulayıcı uygulamasını sıfırlama</a>
        }
    }
    else
    {
        <div class="alert alert-danger">
            <strong>Gizlilik ve çerez politikası kabul edilmemiştir.</strong>
            <p>İki faktörlü kimlik doğrulamayı etkinleştirebilmeniz için önce ilkeyi kabul etmeniz gerekir.</p>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
