@{
    ViewData["Title"] = "Belge Ekle";
}
<h1>@ViewData["Title"]</h1>

<div class="container mt-5">
    <form id="belgeEkleForm">
        <div class="form-group">
            <label for="vknTckn">VKN/TCKN</label>
            <input type="text" class="form-control" id="vknTckn" name="vknTckn" required>
        </div>
        <div class="form-group">
            <label for="ad">Ad</label>
            <input type="text" class="form-control" id="ad" name="ad" required>
        </div>
        <div class="form-group">
            <label for="soyad">Soyad</label>
            <input type="text" class="form-control" id="soyad" name="soyad" required>
        </div>
        <div class="form-group">
            <label for="sehir">Şehir</label>
            <input type="text" class="form-control" id="sehir" name="sehir" required>
        </div>
        <div class="form-group">
            <label for="mahalleSemt">Mahalle/Semt</label>
            <input type="text" class="form-control" id="mahalleSemt" name="mahalleSemt" required>
        </div>
        <div class="form-group">
            <label for="malHizmet">Mal/Hizmet</label>
            <input type="text" class="form-control" id="malHizmet" name="malHizmet" required>
        </div>
        <div class="form-group">
            <label for="miktar">Miktar</label>
            <input type="number" class="form-control" id="miktar" name="miktar" required>
        </div>
        <div class="form-group">
            <label for="birimFiyat">Birim Fiyat</label>
            <input type="number" step="0.000001" class="form-control" id="birimFiyat" name="birimFiyat" required>
        </div>
        <div class="form-group">
            <label for="faturaTipiID">Fatura Tipi ID</label>
            <input type="number" class="form-control" id="faturaTipiID" name="faturaTipiID" required>
        </div>
        <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $('#belgeEkleForm').submit(function (e) {
            e.preventDefault(); // prevent normal form submission

            var formData = {
                vknTckn: $('#vknTckn').val(),
                ad: $('#ad').val(),
                soyad: $('#soyad').val(),
                sehir: $('#sehir').val(),
                mahalleSemt: $('#mahalleSemt').val(),
                malHizmet: $('#malHizmet').val(),
                miktar: parseInt($('#miktar').val()), // convert to integer
                birimFiyat: parseFloat($('#birimFiyat').val()), // convert to float
                faturaTipiID: parseInt($('#faturaTipiID').val()) // convert to integer
            };

            $.ajax({
                url: "https://localhost:7087/api/BelgelerApi",
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (data) {
                    alert('Belge successfully added!');
                    window.location.href = '/Belgeler/List'; // Redirect to success page
                },
                error: function (error) {
                    console.log('Error adding belge: ' + error.responseText);
                    alert('Error adding belge: ' + error.responseText); // Show error message
                }
            });
        });
    });
</script>
